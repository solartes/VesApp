<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VesApp.Views.ReflexionPage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             Title="Reflexiones">
    <ContentPage.Content>
        <StackLayout BindingContext="{Binding ReflexionViewModel}">
            <ListView ItemsSource="{Binding Reflexions}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Label Text="{Binding Titulo}"></Label>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>